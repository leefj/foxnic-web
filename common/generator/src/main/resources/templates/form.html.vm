 <!DOCTYPE html>
<html>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta charset="utf-8"/>
	<title th:text="${lang.translate('#(topic)')}">#(topic)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/assets/libs/layui/css/layui.css"/>
    <link rel="stylesheet" href="/assets/css/admin.css"/>
    <link rel="stylesheet" href="/assets/css/foxnic-web.css">
    <link href="/assets/libs/font-awesome-4.7.0/css/font-awesome.min.css" th:href="@{/assets/libs/font-awesome-4.7.0/css/font-awesome.min.css}" rel="stylesheet"/>
</head>

<body>

<form id="data-form" lay-filter="data-form" class="layui-form model-form" style="display:none">
    #for(f : hiddenFields)
    <input name="#(f.varName)" id="#(f.varName)"  type="hidden"/>
    #end
    #for(f : fields)
    #if(f.isImageField)

    <div class="layui-form-item">
        <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
        <div class="layui-upload layui-input-block">
            <input id="#(f.varName)"  name="#(f.varName)" ay-filter="#(f.varName)" style="display: none">
            <button type="button" class="layui-btn" id="portraitId-button" th:text="${lang.translate('选择图片')}">选择图片</button>
            <div class="layui-upload-list" id="portraitId-file-list"></div>
        </div>
    </div>

	
	#else if(f.isLogicField)
	
    <div class="layui-form-item">
        <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
        <div class="layui-input-block">
            <input type="checkbox" checked="" id="#(f.varName)"  name="#(f.varName)" lay-skin="switch" lay-filter="#(f.varName)" lay-text="#(f.logicField.labelOn)|#(f.logicField.labelOff)" value="#(f.logicField.valueOn)">
        </div>
    </div>
    
	#else if(f.isRadioField)
	
    <div class="layui-form-item">
        <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
        <div class="layui-input-block">
        	#if(f.radioField.dictCode!=null)
            <input type="radio" name="#(f.varName)" lay-filter="#(f.varName)" th:each="e,stat:${dict.toArray('#(f.radioField.dictCode)')}" th:value="${e.code}" th:title="${e.text}">
            #end
            #if(f.radioField.enumTypeName!=null)
            <input type="radio" name="#(f.varName)" lay-filter="#(f.varName)" th:each="e,stat:${enum.toArray('#(f.radioField.enumTypeName)')}" th:value="${e.code}" th:title="${e.text}">
            #end
        </div>
    </div>

    #else if(f.isCheckField)

        <div class="layui-form-item">
            <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
            <div class="layui-input-block">
                #if(f.checkField.dictCode!=null)
                    <input type="checkbox" name="#(f.varName)" lay-filter="#(f.varName)" lay-skin="primary" th:each="e,stat:${dict.toArray('#(f.checkField.dictCode)')}" th:value="${e.code}" th:title="${e.text}">
                #end
                #if(f.checkField.enumTypeName!=null)
                    <input type="checkbox" name="#(f.varName)" lay-filter="#(f.varName)" lay-skin="primary" th:each="e,stat:${enum.toArray('#(f.checkField.enumTypeName)')}" th:value="${e.code}" th:title="${e.text}">
                #end
            </div>
        </div>
    
    #else if(f.isMulitiLine)
    
        <div class="layui-form-item">
        <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
        <div class="layui-input-block">
            <textarea lay-filter="#(f.varName)" id="#(f.varName)" name="#(f.varName)" th:placeholder="${ lang.translate('请输入') +''+ lang.translate('#(f.label)') }" class="layui-textarea" ></textarea>
        </div>
    </div>

    #else if(f.isSelectField)

        <div class="layui-form-item">
            <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
            <div class="layui-input-block">
                <div id="#(f.varName)" th:data="#if(f.selectField.enumTypeName!=null)${enum.toArray('#(f.selectField.enumTypeName)')}#end#if(f.selectField.queryApi!=null)${'#(f.selectField.queryApi)'}#end#if(f.selectField.dictCode!=null)${dict.toArray('#(f.selectField.dictCode)')}#end"></div>
            </div>
        </div>

    #else 
    
    <div class="layui-form-item">
        <label class="layui-form-label" th:text="${lang.translate('#(f.label)')}">#(f.label)</label>
        <div class="layui-input-block">
            <input lay-filter="#(f.varName)" id="#(f.varName)" name="#(f.varName)" th:placeholder="${ lang.translate('请输入') +''+ lang.translate('#(f.label)') }" type="text" class="layui-input"  #if(f.validate!=null)  lay-verify="#if(f.validate.isRequired)|required#end#if(f.validate.isPhone)|phone#end#if(f.validate.isEmail)|email#end#if(f.validate.isUrl)|url#end#if(f.validate.isDate)|date#end#if(f.validate.isIdentity)|identity#end"  #end  />
        </div>
    </div>
    
	#end
	
    #end

    <div class="layui-form-item model-form-footer">
        <button class="layui-btn layui-btn-primary" id="cancel-button" lay-filter="cancel-button" type="button" th:text="${lang.translate('取消')}">取消</button>
        <button class="layui-btn"  id="submit-button" lay-filter="submit-button" lay-submit th:text="${lang.translate('保存')}">保存</button>
    </div>
</form>

<script type="text/javascript" src="/module/global.js"></script>
<script type="text/javascript" src="/assets/libs/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="/assets/libs/pandyle.min.js"></script>
<script type="text/javascript" src="/assets/libs/layui/layui.js"></script>

<script src="#(jsURI)"></script>

</body>
</html>